<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".LodgeComplaintActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lodge Complaint"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:id="@+id/lodgeComplaint"
        android:textStyle="bold"
        />


    <EditText
        android:id="@+id/complaintTile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lodgeComplaint"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="60dp"
        android:background="#30ffffff"
        android:hint="Complaint Title"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/complaintDescription"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/complaintTile"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#30ffffff"
        android:gravity="top"
        android:hint="Complaint Description (upto 250 words)"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <com.hootsuite.nachos.NachoTextView
        android:id="@+id/nacho_text_view_complainAgainst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/complaintDescription"
        android:layout_marginHorizontal="20dp"
        android:background="#30ffffff"
        android:hint="Complain Against"
        android:padding="20dp"
        android:textColorHint="@color/white"

        />


    <com.hootsuite.nachos.NachoTextView
        android:id="@+id/nacho_text_view_reviewer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nacho_text_view_complainAgainst"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="#30ffffff"
        android:hint="Choose Reviewer"
        android:padding="20dp"
        android:textColorHint="@color/white"

        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginButton"
        android:layout_below="@id/nacho_text_view_reviewer"
        android:layout_centerHorizontal="true"
        android:text="Lodge Complaint"
        android:backgroundTint="@color/design_default_color_primary_variant"
        android:layout_margin="15dp"
        />

</RelativeLayout>