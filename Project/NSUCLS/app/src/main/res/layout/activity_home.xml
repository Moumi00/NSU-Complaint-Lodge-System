<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/primary_col">

    <LinearLayout
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/nav_col"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_person_24"
            android:layout_margin="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginVertical="20dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name: Omar Mohammed Haroon"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NSU ID: 2012007042"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email: omarharoon34@gmail.com"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/designation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Designation: RA / TA / Lab Instructor"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details"
        android:layout_marginVertical="30dp"
        android:gravity="center_horizontal">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/details"
            android:background="@color/primary_col"
            android:scaleType="fitCenter"
            android:src="@drawable/my_complains" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/details"
            android:scaleType="fitCenter"
            android:src="@drawable/google" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/details"
            android:scaleType="fitCenter"
            android:src="@drawable/google" />

    </LinearLayout>

</RelativeLayout>